CONFIG_NAME=configure.ac
if [ ! -e "$CONFIG_NAME" ]; then
  CONFIG_NAME=configure.in
  if [ ! -e "$CONFIG_NAME" ]; then
    # not an autotools project
    exit 0
  fi
fi

echo "$CONFIG_NAME"
exit 0
