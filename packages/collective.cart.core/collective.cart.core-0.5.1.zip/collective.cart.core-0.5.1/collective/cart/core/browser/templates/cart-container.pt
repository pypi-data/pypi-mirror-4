<html
  i18n:domain="collective.cart.core"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  >
  <body>
    <div metal:fill-slot="main">
      <section id="cart-container">
        <h1 i18n:translate="">Cart Container</h1>
        <p id="next-cart-id" i18n:translate="">
          The next cart ID: <span tal:replace="context/next_cart_id" />
        </p>
        <p
          i18n:translate=""
          id="no-carts"
          tal:condition="not: view/carts"
          >
          There are no carts.
        </p>
      <table id="cart-list" tal:condition="view/carts">
        <thead>
          <tr>
            <td i18n:translate="">Cart ID</td>
            <td i18n:translate="">State</td>
            <td i18n:translate="">Last Modified</td>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="item view/carts">
            <td class="cart-id">
              <a
                tal:attributes="href item/url"
                tal:content="item/id" />
            </td>
            <td class="cart-state" tal:content="item/review_state" />
            <td class="cart-modified" tal:content="item/modified" />
          </tr>
        </tbody>
      </table>
      </section>
    </div>
  </body>
</html>
