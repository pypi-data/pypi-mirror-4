<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    >

    <browser:page
        for="*"
	class="dm.zope.rpc.tests.example.browser.service.Service"
	name="echo1"
	permission="zope.Public"
	attribute="echo1"
        />

    <browser:page
        for="*"
	class="dm.zope.rpc.tests.example.browser.service.Service"
	name="echo2"
	permission="zope.Public"
	attribute="echo2"
        />

    <browser:page
        for="*"
	class="dm.zope.rpc.tests.example.browser.service.Service"
	name="exception"
	permission="zope.Public"
	attribute="exception"
        />

    <browser:page
        for="*"
	class="dm.zope.rpc.tests.example.browser.service.Service"
	name="now_and_today"
	permission="zope.Public"
	attribute="now_and_today"
        />

    <adapter
        for="* ZPublisher.HTTPRequest.HTTPRequest"
	provides="zope.traversing.interfaces.ITraversable"
	factory="dm.zope.rpc.namespace.RpcNamespace"
	name="rpc"
	/>

     <adapter
        for="* ZPublisher.HTTPRequest.HTTPRequest"
	provides="dm.zope.rpc.interfaces.IProtocolHandler"
	factory="dm.zope.rpc.protocol.xmlrpc.standard_xml_handler"
	name="xmlrpc"
	/>

</configure>
