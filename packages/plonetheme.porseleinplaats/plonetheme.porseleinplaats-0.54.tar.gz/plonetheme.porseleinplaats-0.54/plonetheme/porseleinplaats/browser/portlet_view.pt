<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
		       isAnon context/@@plone_portal_state/anonymous;
		       is_editable context/@@plone_context_state/is_editable;
		       toLocalizedTime nocall:context/@@plone/toLocalizedTime;">

<div id="homePortlets">
<tal:block replace="structure provider:plonetheme.porseleinplaats.homemanager" />
</div>
 <div class="row"> 
    <a class="managePortletsFallback"
        tal:condition="view/showManageButton"
        tal:attributes="href string:${here/absolute_url}/@@manage-home">
        Home portlets beheren
    </a>
 </div>
 
    </tal:main-macro>
</metal:main>

</body>
</html>

