import sys
from twisted.python import log
from twisted.internet import reactor

from bot.base import LogBot, LogBotFactory
from bot.server import UnixFactory

# initialize logging
log.startLogging(sys.stdout)

# create factory protocol and application
tcpfactory = LogBotFactory(sys.argv[1], sys.argv[2])
unixfactory = UnixFactory(tcpfactory)

# connect factory to this host and port
reactor.connectTCP("irc.freenode.net", 6667, tcpfactory)
reactor.listenUNIX("/tmp/socket", unixfactory)

# run bot
reactor.run()
