<?xml version="1.0"?>
<object name="portal_workflow" meta_type="Plone Workflow Tool">
 <object name="plumi_workflow" meta_type="Workflow"/>
 <object name="plumi_image_workflow" meta_type="Workflow"/>
 <bindings>
  <!-- Events workflow set to the community_workflow -->
  <type type_id="Event">
   <bound-workflow workflow_id="plumi_workflow"/>
  </type>

  <type type_id="Favorite">
   <bound-workflow workflow_id="one_state_workflow"/>
  </type>
  
  <!-- News workflow set to the community_workflow -->
  <type type_id="News Item">
   <bound-workflow workflow_id="plumi_workflow"/>
  </type>


  <!-- PlumiVideo set to the community_workflow -->
  <type type_id="PlumiVideo">
   <bound-workflow workflow_id="plumi_workflow"/>
  </type>

  <!-- Call Out worfklow set to the community_workflow -->
  <type type_id="PlumiCallOut">
   <bound-workflow workflow_id="plumi_workflow"/>
  </type>


 </bindings>
</object>


