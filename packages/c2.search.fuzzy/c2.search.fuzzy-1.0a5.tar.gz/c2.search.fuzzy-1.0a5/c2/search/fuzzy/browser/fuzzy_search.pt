      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="c2.search.fuzzy">
<body>


<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div id="contents" class="">
            <div class="heading">
                <h1 class="documentFirstHeading">Fuzzy Search Result</h1>
            </div>

            <!--<div tal:content="view/get_levenshtein_dist" />-->

            <div>
                <form action="fuzzy-search" method="GET">
                    <input type="text" name="search_text" value=""
                           tal:attributes="value request/form/search_text|nothing" />
                    <input type="submit" name="submit" value="Search" />
                </form>
            </div>

            <div>
                <h2 i18n:translate="Levenshtein Distance">Levenshtein Distance</h2>
                <div tal:repeat="near view/get_near">
                    <span tal:content="python: near">Other wordd</span>
                </div>
            </div>

            <div>
                <h2 i18n:translate="Morphological Analysis">Morphological Analysis</h2>
                <div tal:repeat="keitaiso view/get_keitaiso">
                    <span tal:content="python: keitaiso[0]">Noun</span>
                    <span tal:content="python: keitaiso[1]">Yomi</span>
                </div>
