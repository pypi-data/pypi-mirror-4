#! /bin/sh

set -e

if [ "$1" = "remove" ] || [ "$1" = "purge" ]; then
    if [ -f /etc/cron.daily/baruwa ]; then
	    rm -f /etc/cron.daily/baruwa
    fi

    if [ "$1" = "purge" ]; then
        rm -rf /etc/baruwa || true
        rm -rf /var/log/baruwa || true
        rm -rf /var/lib/baruwa || true
        rm -rf /var/run/baruwa || true
        rm -rf /etc/MailScanner/baruwa || true
        if getent passwd baruwa >/dev/null; then
                pkill -u baruwa || true
                sleep 5
                deluser baruwa || true
        fi
        if getent group baruwa >/dev/null; then
                delgroup baruwa || true
        fi
    fi
fi

#DEBHELPER#

