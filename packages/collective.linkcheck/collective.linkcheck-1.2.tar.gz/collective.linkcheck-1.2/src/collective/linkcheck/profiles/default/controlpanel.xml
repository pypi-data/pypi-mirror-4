<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.linkcheck"
    purge="False">

    <configlet
        title="Link validity"
        action_id="linkcheck"
        appId="collective.linkcheck"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@linkcheck-controlpanel"
        icon_expr="string:$portal_url/link_icon.png"
        visible="True"
        i18n:attributes="title">
      <permission>Manage portal</permission>
    </configlet>

</object>
