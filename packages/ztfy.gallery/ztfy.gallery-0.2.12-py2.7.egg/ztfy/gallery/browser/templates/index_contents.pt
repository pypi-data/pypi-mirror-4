<div class="form" tal:define="title view/title | context/i18n:title | nothing" i18n:domain="ztfy.gallery">
	<h1 tal:condition="title"><span class="light">::</span>&nbsp;&nbsp;<span tal:content="title" i18n:translate="" />&nbsp;&nbsp;<span class="light">::</span></h1>
	<fieldset class="gallery">
		<legend tal:condition="view/legend | nothing" tal:content="view/legend" i18n:translate="" />
		<div class="widgets">
			<table>
				<tr>
					<th i18n:translate="">Key</th>
					<th i18n:translate="">Title</th>
					<th i18n:translate="">Description</th>
				</tr>
				<tal:loop repeat="entry python:sorted(context.values.iteritems())">
					<tr>
						<tal:var define="key python:entry[0]; value python:entry[1]">
							<th tal:content="key" />
							<td tal:content="value/i18n:title" />
							<td tal:content="value/i18n:description" />
						</tal:var>
					</tr>
				</tal:loop>
			</table>
		</div>
		<div class="buttons">
			<input tal:repeat="action view/actions/values"
				   tal:replace="structure action/render" />
		</div>
	</fieldset>
</div>