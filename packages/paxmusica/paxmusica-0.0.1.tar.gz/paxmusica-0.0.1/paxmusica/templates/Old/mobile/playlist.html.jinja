    <body>
        <!-- Home -->
        <div data-role="page2" id="page2">
            <div data-theme="b" data-role="header">
                <h3>
                    Pax Musica
                </h3>
            </div>

            <div data-role="page1" id="page1">
                <div data-role="content">
                    <div class="ui-grid-a">
                        <div class="ui-block-a">
                            <a data-role="button" href="/mobile/" data-theme="c">
                                Music
                            </a>
                        </div>
                        <div class="ui-block-b">
                            <a data-role="button" href="/mobile/playlist/" data-theme="c">
                                Playlist
                            </a>
                        </div>
                    </div>
                </div>
            </div>



            <div data-role="page3" id="page3">
                <div data-role="content">
                    <ul data-role="listview" data-divider-theme="b" data-inset="true">
                        <li data-role="list-divider" role="heading">
                            Now playing
                        </li>
                        {% if first_entry.get_artist_tag_for_playlist() %}
                        <li data-theme="a">
                                {{ first_entry.get_artist_tag_for_playlist() }} - {{ first_entry.get_title_tag_for_playlist() }}
                        </li>
                        {% else %}
                        <li data-theme="a">
                                <a href="/mobile/">Currently no music is playing! Choose some songs and turn up the volume!</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>

            <div data-role="page4" id="page4">
                <div data-role="content">
                    <ul data-role="listview" data-divider-theme="b" data-inset="true">
                        <li data-role="list-divider" role="heading">
                            Next on playlist
                        </li>
                        {% if remaining_list %}
                            {% for song in remaining_list %}
                            <li data-theme="c">
                                    {{ song.get_artist_tag_for_playlist() }} - {{ song.get_title_tag_for_playlist() }}
                            </li>
                            <input type="hidden" value="{{ song.path }}" name="chosen">
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>





        </div>
