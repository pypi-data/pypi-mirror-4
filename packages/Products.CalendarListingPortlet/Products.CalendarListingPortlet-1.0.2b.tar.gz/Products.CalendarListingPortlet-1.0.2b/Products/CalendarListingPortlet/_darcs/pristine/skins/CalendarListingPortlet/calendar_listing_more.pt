<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="calendarlistingportlet">

<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border', 1)" />

<body>

    <div metal:fill-slot="main"
         tal:define="results python:context.get_calendar_listing_events();">

            <h1 class="documentFirstHeading" i18n:translate="list_events">Listing events</h1>
            <div tal:repeat="item results">
		<h4><a href="#" tal:attributes="href item/absolute_url" tal:content="item/Title">Title</a></h4>
<!--
		<p tal:content="item/Description">Description</p>
-->
		<strong>Start:</strong> <span tal:content="python:context.toLocalizedTime(item.start(), long_format=True)">Start date</span><br />
		<strong i18n:translate="end">End</strong>: <span tal:content="python:context.toLocalizedTime(item.end(), long_format=True)">End date</span>
            </div>
    </div>

</body>
</html>