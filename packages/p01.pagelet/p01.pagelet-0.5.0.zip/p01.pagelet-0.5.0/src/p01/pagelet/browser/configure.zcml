<configure
    xmlns:zope="http://namespaces.zope.org/zope"
    xmlns="http://namespaces.zope.org/browser"
    xmlns:z3c="http://namespaces.zope.org/z3c"
    i18n_domain="p01">

  <z3c:pagelet
      name="index.html"
      for="zope.interface.common.interfaces.IException"
      class=".SystemErrorPagelet"
      permission="zope.Public"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:template
      for=".SystemErrorPagelet"
      template="systemerror.pt"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <defaultView
      name="index.html"
      for="zope.interface.common.interfaces.IException"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:pagelet
      name="index.html"
      for="zope.publisher.interfaces.ITraversalException"
      class=".NotFoundPagelet"
      permission="zope.Public"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <defaultView
      name="index.html"
      for="zope.publisher.interfaces.ITraversalException"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:pagelet
      name="index.html"
      for="zope.security.interfaces.IUnauthorized"
      class=".UnauthorizedPagelet"
      permission="zope.Public"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:template
      for=".UnauthorizedPagelet"
      template="unauthorized.pt"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <defaultView
      name="index.html"
      for="zope.security.interfaces.IUnauthorized"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:pagelet
      name="index.html"
      for="zope.exceptions.interfaces.IUserError"
      class=".UserErrorPagelet"
      permission="zope.Public"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:template
      for=".UserErrorPagelet"
      template="user.pt"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <defaultView
      name="index.html"
      for="zope.exceptions.interfaces.IUserError"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:pagelet
      name="index.html"
      for="zope.publisher.interfaces.INotFound"
      class=".NotFoundPagelet"
      permission="zope.Public"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <z3c:template
      for=".NotFoundPagelet"
      template="notfound.pt"
      layer="p01.pagelet.layer.IPageletLayer"
      />

  <defaultView
      name="index.html"
      for="zope.publisher.interfaces.INotFound"
      layer="p01.pagelet.layer.IPageletLayer"
      />

</configure>
