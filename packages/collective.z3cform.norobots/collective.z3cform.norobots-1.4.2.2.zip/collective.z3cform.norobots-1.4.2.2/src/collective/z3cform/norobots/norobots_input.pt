<tal:var define="question view/get_question">
	
  <strong><span i18n:translate="" i18n:domain="collective.z3cform.norobots">Question</span></strong>:
  <span i18n:translate="" i18n:domain="collective.z3cform.norobots"
        tal:content="python:question['title']" /><br />

  <strong><span i18n:translate="" i18n:domain="collective.z3cform.norobots">Your answer</span></strong>:
  
  <input type="text" id="" name="" class="" style="" title="" lang=""
     tabindex="" accesskey="" size="" maxlength="" value=""
     tal:attributes="id view/id;
                     name view/name;
                     class view/klass;
                     style view/style;
                     title view/title;
                     lang view/lang;
                     tabindex view/tabindex;
                     accesskey view/accesskey;
                     size view/size;
                     maxlength view/maxlength" />
                     
  <input type="hidden" name="question_id" value=""
         tal:attributes="value python:question['id']" />
  <input type="hidden" name="id_check" value=""
         tal:attributes="value python:question['id_check']" />
         
</tal:var>