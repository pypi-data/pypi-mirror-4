[program:{{ project }}.{{ safe_branch }}.celeryd]
environment = PATH='{{ deploy_dir }}/.virtualenv/bin:$PATH'
command={{ deploy_dir }}/source/manage.py celeryd --settings=settings.{{ mode or 'dev' }} -B -s celery --loglevel=INFO -Q {{ project }}.{{ safe_branch }}
directory={{ deploy_dir }}
user={{ site_user }}
numprocs=1
stdout_logfile={{ deploy_dir }}/logs/celeryd.log
stderr_logfile={{ deploy_dir }}/logs/celeryd.log
autostart=true
autorestart=true
startsecs=10
stopwaitsecs = 120
priority=998
