#!/bin/sh

set -x
args="$*"
export args

echo ARGS=$args

. new_install/stp_tools

while read line
do
	echo XXXXXXXX
	eval `echo $line | split_line `
	echo XXXXXXXX
	echo pkg $pkg
	echo ''
	(
	if cd $pkg
	then
		pwd
		python setup.py install $args
	else
		echo CD FAILED
		exit 1
	fi
	)
	if [ $? != 0 ]
	then
		echo install failed
		exit 1
	fi
	echo ''
done

exit 0

