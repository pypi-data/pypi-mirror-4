<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="newspage_templates"
         meta_type="Filesystem Directory View"
         directory="NewsPage/skins/newspage_templates"/>
 <object name="newspage_styles"
         meta_type="Filesystem Directory View"
         directory="NewsPage/skins/newspage_styles"/>
 <object name="newspage_images"
         meta_type="Filesystem Directory View"
         directory="NewsPage/skins/newspage_images"/>
 
 <skin-path name="Plone NBFTheme">
  <layer insert-after="custom" 
         name="newspage_templates"/>
  <layer insert-after="custom" 
         name="newspage_styles"/>
  <layer insert-after="custom" 
         name="newspage_images"/>
 </skin-path>

</object>