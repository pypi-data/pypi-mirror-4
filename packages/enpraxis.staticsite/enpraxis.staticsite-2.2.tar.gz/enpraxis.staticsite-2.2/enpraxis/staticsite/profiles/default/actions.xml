<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <object name="site_actions" meta_type="CMF Action">
    <object name="deploy" meta_type="CMF Action" i18n:domain="staticsite">
      <property name="title" i18n:translate="">Deploy</property>
      <property name="description" i18n:translate="">Deploy a static version of the Plone site.</property>
      <property name="url_expr">string:${portal_url}/@@deployform</property>
      <property name="permissions">
	<element value="ManagePortal" />
      </property>
      <property name="visible">True</property>
    </object>
  </object>
</object>
