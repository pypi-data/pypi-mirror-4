#!/usr/bin/env python


import os
import sortest


if __name__ == '__main__':
    excluded_files = ["setup.py"]
    excluded_dirs = ["bin", '.svn', '.git']
    try:
        sortest.continuously_test(os.getcwd(), excluded_files,
                                  excluded_dirs, verbose_level=2)
    except KeyboardInterrupt:
        print
