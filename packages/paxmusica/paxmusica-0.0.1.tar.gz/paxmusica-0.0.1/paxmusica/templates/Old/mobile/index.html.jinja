<!DOCTYPE html>
<html>
    <head>
        <title>Pax Musica - Peace on playlists!</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <title>
        </title>
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/jquery.mobile/1.2.0/jquery.mobile-1.2.0.min.css" />
        <link rel="stylesheet" href="/static/my.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.mobile/1.2.0/jquery.mobile-1.2.0.min.js">
        </script>
        <script src="/static/my.js">
        </script>
        <!-- User-generated css -->
        <style>
        </style>
        <!-- User-generated js -->
        <script>
            try {

    $(function() {

    });

  } catch (error) {
    console.error("Your javascript has an error: " + error);
  }
        </script>
    </head>
    <body>
        <!-- Home -->
        <div data-role="page2" id="page2">
            <div data-theme="b" data-role="header">
                <h3>
                    Pax Musica
                </h3>
            </div>


            <div data-role="page4" id="page4">
                <div data-role="content">
                    <div class="ui-grid-a">
                        <div class="ui-block-a">
                            <a data-role="button" href="/mobile/" data-theme="c">
                                Music
                            </a>
                        </div>
                        <div class="ui-block-b">
                            <a data-role="button" href="/mobile/playlist/" data-theme="c">
                                Playlist
                            </a>
                        </div>
                    </div>
                </div>
            </div>


           {% if musicdir.children() %}
            <div data-role="content">
                <ul data-role="listview" data-divider-theme="b" data-inset="true">
                    <li data-role="list-divider" role="heading">
                        {% if musicdir.name() %}
                            {{ musicdir.name() }}
                        {% else %}
                            Artists
                        {% endif %}
                    </li>


                {% for folder in musicdir.children() %}
                    <li data-theme="c">
                        <a href="/mobile{{ url_for('index', path_to_music=folder.path) }}" data-transition="slide">
                            {{ folder.name() }}
                        </a>
                    </li>
                {% endfor %}
                </ul>
           </div>
                {% endif %}



           {% if musicdir.songs() %}

            <div data-role="page3" id="page3">
                <div data-role="content">
                    <ul data-role="listview" data-divider-theme="b" data-inset="true">
                        <li data-role="list-divider" role="heading">
                                {{ musicdir.name() }} by {{ musicdir.songs()[0].get_artist_tag() }}
                        </li>

                        {% for song in musicdir.songs() %}
                        <form action="/add/"
                        method="POST"
                        data-ajax="false">
                        <li data-theme="c">
                            <button data-icon="plus" data-iconpos="right" 
                            {% if song.title() in playlist|string %}
                                 data-theme="a"
                            {% else  %}
                                 data-theme="c"
                            {% endif %}
                                 >
                                {{ song.get_track_tag() }}. {{ song.get_title_tag() }}
                            </button>
                        </li>

                        <input type="hidden" value="{{ song.path }}" name="chosen">
                        </form>
                        {% endfor %}
                    </ul>
                </div>
            </div>


           {% endif %}

        {% if musicdir.path %}

                <div data-role="content">
                            <a href="/mobile{{ url_for('index', path_to_music=musicdir.parent().path) }}" data-role="button" data-transition="slide reverse" data-icon="arrow-l" data-iconpos="left">
                                Back
                            </a>
            </div>

            {% endif %}

        </div>

    </body>
</html>
