<registry>

    <!-- 
    We need to create a separate theme settings record because of
    the cache system used by plone.app.theming
    -->
    <records interface="plone.app.theming.interfaces.IThemeSettings" prefix="collective.themeswitcher"/>

    <record name="collective.themeswitcher.theme.mobile">
        <field type="plone.registry.field.ASCIILine">
            <title>Mobile theme</title>
        </field>
        <value></value>
    </record>

    <record name="collective.themeswitcher.switcher">
        <field type="plone.registry.field.TextLine">
            <title>Theme switcher</title>
            <description>The named switcher that will be used</description>
        </field>
        <value>themeswitcher_default</value>
    </record>

</registry>