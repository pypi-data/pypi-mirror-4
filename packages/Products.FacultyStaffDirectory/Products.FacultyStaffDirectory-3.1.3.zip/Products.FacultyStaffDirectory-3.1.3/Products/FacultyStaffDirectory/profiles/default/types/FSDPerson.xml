<?xml version="1.0"?>
<object name="FSDPerson"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="plone">

 <property name="title" i18n:translate="">Person</property>
 <property name="description" i18n:translate="">Holds information about a single person</property>
 <property name="content_icon">user_suit.png</property>
 <property name="content_meta_type">FSDPerson</property>
 <property name="product">FacultyStaffDirectory</property>
 <property name="factory">addPerson</property>
 <property name="immediate_view">person_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
  <element value="FSDCourse"/>
  <element value="BibliographyFolder"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">person_view</property>
 <property name="view_methods">
  <element value="person_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="person_view"/>
 <alias from="edit" to="pre_edit_setup"/>
 <alias from="index.html" to="person_view"/>
 <alias from="object_rename" to="pre_edit_setup"/>
 <alias from="properties" to="base_metadata"/>
 <alias from="sharing" to="folder_localrole_form"/>
 <alias from="vCard" to="vcard_view"/>
 <alias from="vcard" to="vcard_view"/>
 <alias from="view" to="person_view"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="Properties" action_id="metadata" category="object"
    condition_expr="python:0" url_expr="string:${object_url}/base_metadata"
    visible="False">
  <permission value="Modify portal content"/>
 </action>
 <action title="References" action_id="references" category="object"
    condition_expr="object/archetype_tool/has_graphviz"
    url_expr="string:${object_url}/reference_graph" visible="True">
  <permission value="Modify portal content"/>
  <permission value="Review portal content"/>
 </action>
 <action title="Kupu Preview" action_id="kupupreview" category="object"
    condition_expr="python:0" url_expr="string:${object_url}/image_thumb"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="Sharing" action_id="local_roles" category="object"
    condition_expr="python:0"
    url_expr="string:${object_url}/folder_localrole_form" visible="False">
  <permission value="View"/>
 </action>
</object>
