<configure
    xmlns="http://namespaces.zope.org/zope"
    i18n_domain="collective.xmpp.core">

  <!-- Start up -->
  <subscriber handler=".startup.setUpAdminClient" 
              for="ZPublisher.interfaces.IPubBeforeCommit"/>

  <subscriber
    for="collective.xmpp.core.interfaces.AdminClientConnected"
    handler=".startup.adminConnected"
    />

  <subscriber
    for="collective.xmpp.core.interfaces.AdminClientDisconnected"
    handler=".startup.adminDisconnected"
    />

</configure>
