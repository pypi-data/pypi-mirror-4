<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.z3cform.norobots">

    <configlet
        title="Norobots widget settings"
        action_id="collective.z3cform.norobots.settings"
        appId="collective.z3cform.norobots"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@norobots-controlpanel"
        icon_expr="string:${portal_url}/++resource++collective.z3cform.norobots/images/controlpanel-icon.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>