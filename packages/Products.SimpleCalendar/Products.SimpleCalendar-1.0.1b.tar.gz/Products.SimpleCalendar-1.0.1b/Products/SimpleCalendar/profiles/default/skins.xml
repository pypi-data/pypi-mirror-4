<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="simplecalendar_templates"
         meta_type="Filesystem Directory View"
         directory="SimpleCalendar/skins/simplecalendar_templates"/>
 <object name="simplecalendar_images"
         meta_type="Filesystem Directory View"
         directory="SimpleCalendar/skins/simplecalendar_images"/>
 
 <skin-path name="*">
  <layer insert-after="custom" 
         name="simplecalender_templates"/>
  <layer insert-after="custom" 
         name="simplecalendar_images"/>
 </skin-path>

</object>
