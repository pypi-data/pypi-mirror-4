<?xml version="1.0"?>
<atcttool
  xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <topic_indexes i18n:domain="plone">

  <index name="getChiusura_procedimento_bando" description="Deadline to participate in the announcement"
     enabled="True" friendlyName="Announcement: expiration date"
     i18n:attributes="friendlyName; description">
   <criteria>ATFriendlyDateCriteria</criteria>
   <criteria>ATDateRangeCriterion</criteria>
  </index>

  <index name="getDestinatariBando" description="Announcement recipients"
         enabled="True" friendlyName="Announcement: recipients"
         i18n:attributes="friendlyName; description">
   <criteria>ATSelectionCriterion</criteria>
   <criteria>ATCurrentAuthorCriterion</criteria>
   <criteria>ATSimpleStringCriterion</criteria>
   <criteria>ATListCriterion</criteria>
  </index>

  <index name="getScadenza_bando" description="Closing date of the announcements"
     enabled="True" friendlyName="Announcement: closing date"
     i18n:attributes="friendlyName; description">
   <criteria>ATFriendlyDateCriteria</criteria>
   <criteria>ATDateRangeCriterion</criteria>
  </index>

  <index name="getTipologia_bando" description="Announcement type"
         enabled="True" friendlyName="Announcement: type"
         i18n:attributes="friendlyName; description">
   <criteria>ATSelectionCriterion</criteria>
   <criteria>ATCurrentAuthorCriterion</criteria>
   <criteria>ATSimpleStringCriterion</criteria>
   <criteria>ATListCriterion</criteria>
  </index>

  </topic_indexes>
</atcttool>
