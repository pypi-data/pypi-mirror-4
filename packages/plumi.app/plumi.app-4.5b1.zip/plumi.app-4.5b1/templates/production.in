[app:plone]
use = egg:Zope2#main
zope_conf = ${plone:location}/etc/zope.conf

[pipeline:main]
pipeline =
    egg:repoze.retry#retry
    egg:repoze.tm2#tm
    egg:repoze.vhm#vhm_xheaders
    plone

[server:main]
use = egg:gunicorn#main
host = ${site:localhost}
port = ${site:wsgi-port}
workers = 2
timeout = 7200
keepalive = 7200

[uwsgi]
http-socket = ${site:localhost}:${site:wsgi-port}
workers = ${site:wsgi-workers}

# Begin logging configuration

[loggers]
keys = root

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = WARN
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s

# End logging configuration
