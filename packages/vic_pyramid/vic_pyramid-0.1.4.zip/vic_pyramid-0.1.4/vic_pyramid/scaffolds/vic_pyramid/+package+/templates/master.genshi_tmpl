<!DOCTYPE HTML>
<html xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      py:strip=""
>

<head py:match="head" py:attrs="select('@*')">
    <meta content="text/html; charset=UTF-8" http-equiv="content-type" />
    
    <link 
        rel="stylesheet" 
        href="${ request.static_url('{{package}}:static/bootstrap/css/bootstrap.min.css') }" 
        type="text/css" 
    />
    
    <!-- Font Awesome - http://fortawesome.github.com/Font-Awesome -->
    <link 
        rel="stylesheet" 
        href="${ request.static_url('{{package}}:static/font-awesome/css/font-awesome.css') }" 
        type="text/css" 
    />  

<?python

from genshi import HTML
_tmpl = """<!--[if IE 7]>
    <link 
        rel="stylesheet" 
        href="%s" 
        type="text/css" 
    />  
<![endif]--> """ % request.static_url('{{package}}:static/font-awesome/css/font-awesome-ie7.css')

?>
    <span py:replace="HTML(_tmpl)" />
    
    <link 
        rel="stylesheet" 
        href="${ request.static_url('{{package}}:static/css/style.css') }" 
        type="text/css" 
    />

    <meta py:replace="select('*')"/>

</head>

<body py:match="body" py:attrs="select('@*')">

<?python

from pyramid.i18n import get_locale_name
from pyramid.security import effective_principals

from {{package}} import flash

msgs = request.session.pop_flash()
flash_msgs = []
for msg in msgs:
    type_ = flash.DEFAULT_TYPE
    content = msg
    
    for t in flash.MSG_TYPES:
        if msg.startswith(t + ' '):
            type_ = t
            content = msg[len(t)+1:]
            break
        
    flash_msgs.append((type_, content))

?>
    
    <header id="header" class="navbar" 
        py:with="route_name=request.matched_route.name if request.matched_route else None"
    >
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="${ request.route_url('front.home') }">{{package}}</a>
                <ul class="nav">
                    <li>
                        <a href="#"><i class="icon-star"></i> Item1</a>
                    </li>
                    <li>
                        <a href="#"><i class="icon-star"></i> Item2</a>
                    </li>
                    <li>
                        <a href="#"><i class="icon-star"></i> Item3</a>
                    </li>
                </ul>
                
                <ul id="login" class="nav pull-right">
                    <py:if test="request.user_id is None">
                        <li py:attrs="{'class': 'active'} if route_name == 'account.login' else {}">
                            <a href="${ request.route_url('account.login') }"><i class="icon-signin"></i> Login</a>
                        </li>
                    </py:if>
                    <py:if test="request.user_id is not None">
                        <li py:if="'permission:admin' in effective_principals(request)"
                            py:attrs="{'class': 'active'} if route_name.startswith('admin') else {}"
                        >
                            <a href="${ request.route_url('admin.home') }"><i class="icon-lock"></i> Admin</a>
                        </li>
                        <li>
                            <a href="${ request.route_url('account.logout') }"><i class="icon-signout"></i> Logout ${ request.user.display_name or request.user.user_name }</a>
                        </li>
                    </py:if>
                </ul>
            </div>
        </div>
    </header>
    
    <section id="container" class="container">
    
        <div id="flash-msgs" py:if="flash_msgs">
            <div py:for="type_, msg in flash_msgs" 
                class="alert alert-${ type_ }">
                ${ msg }
            </div>
        </div>
        
        <div py:replace="select('*|text()')"/>
    </section>
    
    <hr />
    
    <footer class="container">
        <div id="langs">
            <form 
                class="form-inline"
                name="lang_form" 
                id="lang_form" action="/" 
                py:with="langs=request.registry.settings['available_langs']; 
                       current_lang=get_locale_name(request)"
            >
              Language: 
              <select name="lang_menu" id="lang_menu" onchange="window.location = this.options[this.selectedIndex].value;">
                <option 
                  py:for="lang, lang_name in langs" 
                  value="${ request.route_url('front.set_lang', lang=lang) }" 
                  py:attrs="dict(selected='selected') if (lang.lower() == current_lang.lower()) else dict()"
                >
                  ${ lang_name }
                </option>
              </select>
            </form>
            
        </div>
        
    </footer>

</body>
</html>
