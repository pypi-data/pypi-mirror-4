<div class="plonesocial profile miniprofile"
     tal:condition="view/data">
  
  <div class="portrait">
    <a tal:attributes="href view/profile_url"
       tal:content="structure view/portrait" />
  </div>
  
  <div class="personal-info">
    
    <h3 class="username">
      <a tal:attributes="href view/profile_url"
	 tal:content="view/data/fullname">user name</a>
    </h3>

    <div class="userid">
      <a tal:attributes="href view/profile_url"
	 tal:content="string: @${view/userid}">@who</a>
    </div>


    <div class="bio"
	 tal:content="view/data/description">bio</div>
    <div>
    </div>

    <div class="subunsub" tal:condition="view/show_subunsub" i18n:domain="plonesocial.network">
      <form method="post">
        <input type="hidden" name="userid"
               tal:attributes="value view/userid" />
	<!-- TODO check this string, by extract it for add i18n support -->
	<input type="submit" name="subunsub" value="follow" 
	       tal:condition="not:view/is_following" />
	<span tal:condition="view/is_following"
	      class="following" i18n:translate="">
	  Following
	</span>
	<!-- TODO check this string, by extract it for add i18n support -->
	<input type="submit" name="subunsub" value="unfollow"
	       tal:condition="view/is_following" />
      </form>
    </div>
    
  </div><!-- /info -->
  
  
</div><!-- /profile -->
