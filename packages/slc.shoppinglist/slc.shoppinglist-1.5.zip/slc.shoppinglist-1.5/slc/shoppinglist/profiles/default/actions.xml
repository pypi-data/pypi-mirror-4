<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    <object name="object_buttons" meta_type="CMF Action Category">
      <object name="add_to_shoppinglist" meta_type="CMF Action" i18n:domain="slc.shoppinglist">
       <property name="title" i18n:translate="">Add to shoppinglist</property>
       <property name="description" i18n:translate=""></property>
       <property
          name="url_expr">string:${object_url}/@@add_to_shoppinglist</property>
       <property name="icon_expr">string:++resource++shoppinglist_icon.gif</property>
       <property name="available_expr">python:not globals_view.isPortalOrPortalDefaultPage()</property>
       <property name="permissions">
        <element value="View"/>
       </property>
       <property name="visible">True</property>
      </object>
    </object>
    <object name="user" meta_type="CMF Action Category">
      <object name="shoppinglistedit" meta_type="CMF Action" i18n:domain="slc.shoppinglistedit">
       <property name="title" i18n:translate="">Shopping List</property>
       <property name="description" i18n:translate=""></property>
       <property
          name="url_expr">string:${folder_url}/@@shoppinglistedit</property>
       <property name="icon_expr"></property>
       <property name="available_expr">python:portal.portal_membership.checkPermission('Add portal content', object)</property>
       <property name="permissions">
        <element value="View"/>
       </property>
       <property name="visible">True</property>
     </object>
    </object>
</object>