<dl class="portlet portletCalendarListingPortlet"
    i18n:domain="calendarlistingportlet"
    tal:define="portal_url context/@@plone_portal_state/portal_url"
>

    <dt class="portletHeader" i18n:translate="list_events">List events</dt>

    <metal:block tal:repeat="object python:view.get_results(limit=3)">
    <dd class="portletItem"
        tal:define="oddrow repeat/object/odd;"
            tal:attributes="class python:oddrow and 'portletItem odd' or 'portletItem even'">
	<a href="#" tal:attributes="href object/absolute_url"
		tal:content="object/Title">Title</a>
    </dd>
    </metal:block>

    <dd class="portletFooter">
	<a class="title" href="#" tal:attributes="href string:${portal_url}/intranett/calendar_listing_more"
	i18n:translate="more_events">More events</a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>

    </dd>

    
</dl>
