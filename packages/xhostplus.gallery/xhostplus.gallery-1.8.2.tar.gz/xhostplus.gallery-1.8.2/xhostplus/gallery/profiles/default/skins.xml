<?xml version="1.0"?>
<object name="portal_skins" meta_type="Plone Skins Tool">

 <object name="xhostplus_gallery_custom_images"
    meta_type="Filesystem Directory View"
    directory="xhostplus.gallery:skins/xhostplus_gallery_custom_images"/>
 <object name="xhostplus_gallery_custom_templates"
    meta_type="Filesystem Directory View"
    directory="xhostplus.gallery:skins/xhostplus_gallery_custom_templates"/>
 <object name="xhostplus_gallery_styles"
    meta_type="Filesystem Directory View"
    directory="xhostplus.gallery:skins/xhostplus_gallery_styles"/>
 <object name="xhostplus_gallery_custom_javascripts"
    meta_type="Filesystem Directory View"
    directory="xhostplus.gallery:skins/xhostplus_gallery_custom_javascripts"/>

 <skin-path name="*">
  <layer name="xhostplus_gallery_custom_images"
     insert-after="custom"/>
  <layer name="xhostplus_gallery_custom_templates"
     insert-after="custom"/>
  <layer name="xhostplus_gallery_styles"
     insert-after="custom"/>
  <layer name="xhostplus_gallery_custom_javascripts"
     insert-after="custom"/>
 </skin-path>

</object>
