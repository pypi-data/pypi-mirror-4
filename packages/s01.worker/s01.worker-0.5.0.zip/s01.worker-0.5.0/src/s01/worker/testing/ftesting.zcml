<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:browser="http://namespaces.zope.org/browser"
   xmlns:meta="http://namespaces.zope.org/meta"
   xmlns:p01="http://namespaces.zope.org/p01"
   i18n_domain="p01">

  <!-- Turn on the devmode -->
  <meta:provides feature="devmode" />

  <!-- load xpo and xsample configuration -->
  <include package="s01.worker" file="app.zcml" />

  <principal
      id="zope.mgr"
      title="Manager"
      login="mgr"
      password="mgrpw"
      />
  <grant
      role="scrapy.Manager"
      principal="zope.mgr"
      />

  <principal
      id="zope.globalmgr"
      title="Manager"
      login="globalmgr"
      password="globalmgrpw"
      />
  <grant
      role="scrapy.Manager"
      principal="zope.globalmgr"
      />

</configure>
