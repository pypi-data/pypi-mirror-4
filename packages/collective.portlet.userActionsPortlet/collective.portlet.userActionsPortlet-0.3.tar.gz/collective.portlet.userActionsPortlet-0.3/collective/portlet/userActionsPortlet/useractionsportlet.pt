<dl class="portlet portletUserActionsPortlet"
    i18n:domain="collective.portlet.userActionsPortlet">

    <dt class="portletHeader" tal:condition="python:view.getHeader() != ''">
        <span class="portletTopLeft"></span>
        <span tal:replace="python:view.getHeader()">Header</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <ul id="user-actions">
            <li tal:repeat="action view/user_actions">
                <a href=""
                    tal:attributes="href action/url;
                    id string:personaltoolspage-${action/id};"
                    tal:content="action/title"
                    i18n:translate="">
                        action title
                </a>
            </li> 
        </ul>
    </dd>
</dl>
