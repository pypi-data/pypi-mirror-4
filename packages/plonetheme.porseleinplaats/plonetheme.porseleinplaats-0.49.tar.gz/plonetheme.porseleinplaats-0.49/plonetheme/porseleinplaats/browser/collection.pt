<dl class="portlet portletCollection"
    i18n:domain="plone"
    tal:define="collection_url view/collection_url;
                plone_view context/@@plone;
                toLocalizedTime nocall:plone_view/toLocalizedTime;
                viewActions here/portal_properties/site_properties/typesUseViewActionInListings|python:();
                getIcon nocall:plone_view/getIcon;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
            <span tal:content="view/data/header" />
        </a>
        <span class="portletTopRight"></span>
    </dt>
    <tal:events tal:repeat="obj view/results">
    <dd class="portletItem"
        tal:define="oddrow repeat/obj/odd;
			useView    python:obj.portal_type in viewActions;
			itemUrl    python:useView and obj.getURL() + '/view' or obj.getURL();
			item_icon python:getIcon(obj);
			DateTime python:modules['DateTime'].DateTime;
			now python:DateTime()"
	tal:condition="python: not here.portal_membership.isAnonymousUser() or obj.getObject().endDate >= now"
        tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
        
        <!-- Make "span" into "a" to activate linking -->
        <span href="#"
           class="tile"
	   tal:define="item_has_leadimage obj/hasContentLeadImage"
           tal:attributes="href itemUrl;
                           title obj/Description">
	    <div class="collectionImage" tal:define="itemObj python:obj.getObject()">	   
		<img src="" alt=""
                     tal:condition="exists:itemObj/image_thumb"
                     tal:replace="structure python: path('nocall:itemObj/tag')(scale='thumb', css_class='relatedImage')" />
             	<img src="" alt="" class="relatedImage"
                             tal:condition="item_has_leadimage"
                             tal:attributes="src python:obj.getURL() + '/leadImage_thumb'" />
            </div>
	    <span class="portletItemTitle" tal:content="obj/pretty_title_or_id">
             Title
            </span>
            <span class="portletItemDetails"
                  tal:condition="python: obj.portal_type == 'Event'"
		  tal:define="eventDate python: obj.getObject().startDate.strftime('%e/%m/%Y') == obj.getObject().endDate.strftime('%e/%m/%Y') and toLocalizedTime(obj.getObject().startDate) or toLocalizedTime(obj.getObject().startDate) + ' tot ' +toLocalizedTime(obj.getObject().endDate)"
                  tal:content="python:'Datum: %s' % eventDate">
                Date
            </span>
            <span class="portletItemDescription" tal:content="obj/Description">
             Description
            </span>
        </span>
	<div class="visualClear"></div>
    </dd>
    </tal:events>
    
    <dd class="portletFooter" tal:condition="view/data/show_more">
        <span class="portletBottomLeft"></span>
        <span>
        <a class="portletMoreLink" tal:attributes="href collection_url">
                Meer activiteiten
                <img title="" class="image-inline" alt="" src="linkBackground.png">
             </a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>