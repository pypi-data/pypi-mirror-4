<dl class="portlet portletCollection portletBandi"
    i18n:domain="rer.bandi"
    tal:define="collection_url view/collection_url;
                plone_view context/@@plone;
                toLocalizedTime nocall:plone_view/toLocalizedTime;
                getIcon nocall:plone_view/getIcon;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
            <span class="tile" tal:content="view/data/header" />
        </a>
        <span class="portletTopRight"></span>
    </dt>
    
    <tal:events tal:repeat="obj view/results">
    <dd class="portletItem bandoItem"
        tal:define="oddrow repeat/obj/odd;
                    item_icon python:getIcon(obj);"
        tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
        <div class="bandoInfos"
             tal:define="stato_bando python:view.getBandoState(obj)">
            <div tal:condition="stato_bando"
                  tal:define="stato_class python:stato_bando[0];
                              stato_str python:stato_bando[1]"
                  tal:attributes="class string:state-${stato_class} bandoStateClass"
                  i18n:domain="rer.bandi"
                  tal:content="stato_str">
                    stato
             </div>
		  <h3 class="bandoTitle">
                    <a class="bandoTitle" tal:attributes="href obj/getURL;
                                       title obj/pretty_title_or_id"
                       tal:content="obj/pretty_title_or_id" />
	      </h3>
		
		  <p class="bandoDescription"
		        tal:condition="python:view.data.show_description and obj.Description"
                tal:content="obj/Description" />
		  <p class="bandoType"
		     tal:condition="view/data/show_tipologia_bando"
             tal:content="python: view.voc_tipologia.getTermByToken(obj.tipologia_bando).title" />
			 
		  <div class="bandoDates" tal:condition="python:(view.data.show_effective or view.data.show_scadenza_bando) and (obj.EffectiveDate!='None' or obj.scadenza_bando)">
                <tal:pubblicazione condition="python:view.data.show_effective and obj.EffectiveDate!='None'">
                    <span  class="labelTB" i18n:translate="bandi_published_on">Published on</span>:
                    <span tal:content="python:here.toLocalizedTime(obj.EffectiveDate)" />
                </tal:pubblicazione>
                <span tal:omit-tag=""
                      tal:condition="python:(view.data.show_effective and view.data.show_scadenza_bando) and (obj.EffectiveDate!='None' and obj.scadenza_bando)">
                        |
                </span>
                <tal:scadenza_bando condition="python:view.data.show_scadenza_bando and obj.scadenza_bando">
                    <span  class="labelTB" i18n:translate="bando_scadenza_partecipazione">Deadline participation terms</span>:
                    <span tal:content="python:toLocalizedTime(obj.scadenza_bando, long_format=True)" />
                </tal:scadenza_bando>
            </div>
        </div>
    </dd>
    </tal:events>
    
    <dd class="portletFooter" tal:condition="view/data/show_more">
        <span class="portletBottomLeft"></span>
        <span>
          <a class="arrowLink" tal:attributes="href view/more_target_url" tal:content="view/data/show_more_text">
             More&hellip;
          </a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
