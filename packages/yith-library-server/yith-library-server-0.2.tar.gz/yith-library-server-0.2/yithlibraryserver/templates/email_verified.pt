<div tal:omit-tag="" i18n:domain="yithlibraryserver">
  <span tal:condition="email and email_verified" class="badge badge-success" i18n:translate="">Verified</span>
  <span tal:condition="email and not email_verified">
    <span class="badge badge-warning" i18n:translate="">Unverified</span>
    <a tabindex="-1" id="open-email-verification-dialog" href="#email-verification-dialog" class="btn btn-mini btn-primary" data-toggle="modal" i18n:translate="">Verify email address</a>
  </span>
</div>