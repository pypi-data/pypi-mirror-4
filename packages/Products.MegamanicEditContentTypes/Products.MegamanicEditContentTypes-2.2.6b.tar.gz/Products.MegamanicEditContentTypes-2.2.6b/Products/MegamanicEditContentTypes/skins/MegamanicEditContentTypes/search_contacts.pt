<tal:block metal:define-macro="master">
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

  <body>

    <metal:fill fill-slot="main">
    <metal:main define-macro="main">
    <metal:block tal:define="results context/search_contacts_results">

    <form action="./search_contacts" tal:condition="python:not request.has_key('SearchableText')">

    <label for="SearchableText" i18n:translate="label_search_text">Search text</label><br /><br />
    &nbsp;&nbsp;<input type="text" name="SearchableText" name="SearchableText" size="30" /><br /><br />

    <label for="Subject" i18n:translate="label_categories">Categories</label><br /><br />
    <metal:block tal:repeat="subject subjects" tal:define="subjects python:context.portal_catalog.uniqueValuesFor('Subject')">
        &nbsp;&nbsp;<input type="checkbox" name="Subject:list" tal:attributes="value subject" /> <span tal:content="subject"></span><br />
    </metal:block>
    <br /><br />
    	&nbsp;&nbsp;<input type="checkbox" name="search_all_subjects" value="search" /><b>Search all categories</b>
    <br /><br /><input type="submit" value=" Search " />

    </form>

    <form tal:condition="python:request.has_key('SearchableText') and results" action="./create_email" method="post">
    <table>
    <tr>
	<th>&nbsp;&nbsp;</th>
	<th>Name</th>
	<th>Emails</th>
    </tr>
    <tr tal:repeat="contact results">
    	<td><input type="checkbox" name="to:list" tal:attributes="value python:','.join(contact.getEmailAddresses())" /></td>
	<td><a tal:attributes="href contact/absolute_url" tal:content="contact/Title">Contact</a></td>
	<td tal:content="python:','.join(contact.getEmailAddresses())"></td>
    </tr>
    </table>
    <br /><br />
    <input type="submit" value=" Send email ">
    </form>

    <p tal:condition="not:results">No results matched those criteria.</p>

    </metal:block>
    </metal:main>
    </metal:fill>

  </body>

</html>

</tal:block>
