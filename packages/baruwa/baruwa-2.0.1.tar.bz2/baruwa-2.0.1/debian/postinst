#!/bin/sh
# postinst script for baruwa
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule
db_version 2.0 || [ $? -lt 30 ]

# create baruwa group
if ! getent group baruwa >/dev/null; then
        addgroup --system baruwa
fi

# create baruwa user
if ! getent passwd baruwa >/dev/null; then
        adduser --system --ingroup baruwa --home /var/lib/baruwa \
                --no-create-home --gecos "Baruwa Celery worker daemon" \
                --disabled-login baruwa
fi

install -d -obaruwa -gwww-data -m0750 /var/run/baruwa
install -d -obaruwa -gbaruwa -m0750 /var/log/baruwa
install -d -obaruwa -gwww-data -m0770 /var/lib/baruwa
install -d -obaruwa -gDebian-exim -m0770 /var/lock/baruwa
install -d -obaruwa -gbaruwa -m0755 /etc/MailScanner/baruwa

case "$1" in
    configure)
    if [ ! -e /etc/baruwa/production.ini >/dev/null ]; then
    	cd /etc/baruwa >/dev/null
    	paster make-config baruwa production.ini >/dev/null
    	cd - >/dev/null
    fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
