let g:clang_use_library = 1
let g:NERDTreeWinPos = "right"
let mapleader = ","
let Tlist_Auto_Open = 1
set bg=dark

"command :q :qall

map <F12> :!cscope -Rqb<CR>:cs kill 0<CR>:cs add cscope.out<CR>


filetype off                   " required!
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

