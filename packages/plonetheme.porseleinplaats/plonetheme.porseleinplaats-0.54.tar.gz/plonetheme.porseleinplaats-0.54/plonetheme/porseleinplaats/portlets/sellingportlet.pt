<dl class="portlet portlet-selling"
    i18n:domain="plone" tal:condition="exists:context/for_sale">

    <dd class="portletItem"
	    tal:define="creator python:context.portal_membership.getMemberById(context.Creator());
			    email python:creator.getProperty('email', None);
			    price python: str(context.price).replace('.', ',');
	    ">
	<div class="sellingInfo no" tal:condition="not: context/for_sale">Niet te koop</div>
	<div class="sellingInfo yes" tal:condition="context/for_sale">
	<span class="forSale">Kopen voor: </span>
	<span tal:content="string: &euro; ${price}" omit-tag="">1000.00 &euro;</span>
	<a href="" tal:attributes="href string:mailto:${email}?subject=${context/Title}" class="emailButton">Email deze adverteerder</a>
	</div>
	<div class="visualClear"></div>
    </dd>
</dl>





