import argparse
import sys
from sisyphus.bin.commands import worker

if __name__ == "__main__":
	parser = argparse.ArgumentParser(description="Schedules periodic tasks with sisyphus.")
	parser.add_argument("-i", "--imports", dest="imports", help="coma separated imports. E.g. tasks module paths.")
	options = parser.parse_args(sys.argv)
	if not options.imports:
		print "--imports param is required"
		sys.exit(1)

	worker(options.imports)