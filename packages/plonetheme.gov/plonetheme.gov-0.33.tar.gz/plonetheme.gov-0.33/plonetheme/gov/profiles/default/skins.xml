<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Gov Theme">

 <object name="plonetheme.gov_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.gov:skins/plonetheme.gov_custom_images"/>
 <object name="plonetheme.gov_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.gov:skins/plonetheme.gov_custom_templates"/>
 <object name="plonetheme.gov_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.gov:skins/plonetheme.gov_styles"/>

 <skin-path name="Gov Theme" based-on="INTK Base">
  <layer name="plonetheme.gov_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme.gov_custom_templates"
     insert-after="plonetheme.gov_custom_images"/>
  <layer name="plonetheme.gov_styles"
     insert-after="plonetheme.gov_custom_templates"/>
 </skin-path>

</object>
