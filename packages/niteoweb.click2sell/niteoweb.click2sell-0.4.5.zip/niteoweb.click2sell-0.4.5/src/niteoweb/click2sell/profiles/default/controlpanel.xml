<?xml version="1.0"?>
<object name="portal_controlpanel"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="niteoweb.click2sell">

  <configlet title="Configure click2sell"
             action_id="click2sellConfiguration"
             appId="click2sellConfiguration"
             category="Products"
             condition_expr=""
             url_expr="string:${portal_url}/@@click2sell-settings"
             icon_expr="string:$portal_url/++resource++click2sell_icon.png"
             visible="True"
             i18n:attributes="title">
    <permission>Manage Portal</permission>
  </configlet>

</object>