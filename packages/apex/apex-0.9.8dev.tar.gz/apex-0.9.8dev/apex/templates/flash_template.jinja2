{% macro apex_head() -%}
<link rel="stylesheet" href="{{request.static_url('apex:static/css/apex_flash.css')}}" type="text/css" media="screen" charset="utf-8" />
{% endmacro %}

{% macro apex_flash() -%}
{%- for flash in flash.get_all() %}
    <div class="alert-message {{ flash['queue'] }}">
        <p>{{ flash['message'] }}</p>
    </div>
{%- endfor -%}
{% endmacro %}
