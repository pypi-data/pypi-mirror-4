<div tal:repeat="item python: options['items']"
  ><p><a tal:content="item/Title"
     tal:define="new_window options/new_window"
     tal:attributes="href item/getURL; target python: new_window and '_blank' or ''"></a
     ></p
     ><div tal:content="item/Description" tal:condition="item/Description"
    /><img src="" 
         tal:condition="item/hasContentLeadImage"
         tal:attributes="src string:${item/getURL}/leadImage_mini; title item/Title"
         title=""
     ><img src="" 
         tal:condition="python: item.portal_type=='Link'"
         tal:attributes="src string:${item/getURL}/image_mini; title item/Title"
         title=""
     ></div>
