<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="newspage">

<body>

    <div metal:fill-slot="main"
         tal:define="results python:context.secondary_news();
                   Batch python:modules['Products.CMFPlone'].Batch;
                   b_size python:15;
                   b_start python:0;
                   b_start request/b_start | b_start;">

        <div tal:condition="python:context.check_b_start(b_start)">
            <h1 class="documentFirstHeading" i18n:translate="news">News</h1>
            <div tal:repeat="item python:context.primary_news()" class="headlines">
                    <a href="" tal:attributes="href python:item.absolute_url()" class="headline-image">
                        <img src="" alt="" tal:replace="structure python:item.tag(scale='thumb')" />
                    </a>
                    <h4 class="headline-title" tal:content="item/Title">Title</h4>
                    <p class="headline-desc" tal:content="item/Description">Description</p>
                    <a href="" tal:attributes="href python:item.absolute_url()" class="headline-more">
                        <span class="newspageLink" i18n:translate="read_more_about">Read more about </span>
                        <span tal:content="item/Title"></span>...
                    </a>
            </div>
        </div>

        <div tal:condition="results"
             tal:define="batch python:Batch(results, b_size, int(b_start), orphan=1);">

            <h4 class="newspageHeadline" i18n:translate="previous_news_items">Previous news items</h4>
            <ul>
            <metal:block tal:repeat="result batch">
                <li>
                    <a href="" tal:attributes="href result/absolute_url" tal:content="result/Title"></a>
                </li>            
            </metal:block>
            </ul>

            <div metal:use-macro="here/batch_macros/macros/navigation" />

        </div>

    </div>
</body>
</html>