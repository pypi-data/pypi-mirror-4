<?xml version="1.0"?>
<object name="Contact"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="Products.MegamanicEditContentTypes" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">Contact</property>
  <property name="description"
    i18n:translate="">A contact with many addable properties</property>
  <property name="content_meta_type">Contact</property>
  <property name="content_icon">folder_icon.gif</property>
  <property name="product">Products.MegamanicEditContentTypes</property>
  <property name="factory">addContact</property>
  <property name="immediate_view">megamanic_edit</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">False</property>
  <property name="allowed_content_types">
   <element value="Address"/>
   <element value="Email address"/>
   <element value="Net address"/>
   <element value="Address"/>
   <element value="Phone number"/>
   <element value="Workplace and work title"/>
  </property>
  <property name="allow_discussion">True</property>
  <property name="default_view">megamanic_view</property>
  <property name="view_methods">
    <element value="base_view" />
    <element value="megamanic_view" />
  </property>
  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True">
    <permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object"
    url_expr="string:${object_url}/base_edit" visible="True">
    <permission value="Modify portal content" />
  </action>
</object>
