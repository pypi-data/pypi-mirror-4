<div class="modal" data-type="window"
     style="max-height: 10000px">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>{{label}}</h3>
  </div>
  <div class="modal-body">
    {{#if description}}
      <p>{{&description}}</p>
    {{/if}}
    <form class="form-horizontal">
      <div data-place="content" data-tag="fields">
        {{>form}}
      </div>
    </form>
  </div>
  <div data-tag="actions">
    <div class="modal-footer">
      {{#actions}}
        <a href="#" class="{{cls}}"
           data-action="action" data-name="{{name}}">{{title}}</a>
      {{/actions}}
    </div>
  </div>
</div>
