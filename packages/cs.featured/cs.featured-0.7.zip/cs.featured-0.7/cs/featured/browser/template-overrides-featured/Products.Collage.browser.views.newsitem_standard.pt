<tal:manager replace="structure provider:collage.ContentManager" />
<div class="text-document">
    <div class="destak-img">
        <p><a href="" tal:attributes="href python:here.getLink()"><img tal:replace="structure python: here.tag(scale='mini')" src="" alt="" /></a></p>
    </div>
    <div class="destak-text">
        <h2 metal:define-macro="title"
            tal:define="view context/@@collage_kss_helper"
            tal:attributes="id string:${view/getUniqueIdentifier}-title;
                            class python: view.getKssClasses('title')"
            tal:condition="here/Title">
            <span metal:define-slot="inside">
                <a href="" tal:content="here/Title" tal:attributes="href python:here.getLink()">
                </a>
            </span>
        </h2>
        <span tal:replace="structure here/getText"></span>
    </div>
</div>

