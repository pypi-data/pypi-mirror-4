<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="Products.BlingPortlet">
  <portlet 
    addview="Products.BlingPortlet.bling"
    title="Bling Portlet"
    description="A portlet that brings the bling to your site."
    i18n:attributes="title title_bling_portlet;
                     description description_bling_portlet">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>
  <portlet 
    addview="Products.BlingPortlet.blingslideshow"
    title="Bling Slideshow Portlet"
    description="A portlet that brings the animated bling to your site."
    i18n:attributes="title title_blingslideshow_portlet;
                     description description_blingslideshow_portlet">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>
</portlets>
