<dl class="portlet portletTwitterMultiStream"
    i18n:domain="collective.portlet.twittermultistream">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/header"></span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd" tal:repeat="tweet view/get_tweets">
    <blockquote class="twt-tweet">
        <div class="vcard author">
	        <a class="screen-name url" data-screen-name="PhilippeAllard" tal:attributes="href string:http://twitter.com/${tweet/screen_name}">
	        <span class="avatar"><img tal:attributes="src string:${tweet/profile_image_url}; alt tweet/name" class="image-left photo"/></span>
	        <span class="fn" tal:content="tweet/name">...</span><br/>
	        <span class="nickname">@<b tal:content="tweet/screen_name">...</b></span>
	        </a>
	    </div>
        <div class="entry-content" tal:condition="tweet/status|nothing">
          <p class="entry-title" tal:content="structure tweet/status/text">...</p>
        </div>
        <a tal:condition="tweet/status|nothing" tal:attributes="href string:https://twitter.com/${tweet/screen_name}/status/${tweet/status/id}"><time class="timeago" tal:attributes="datetime tweet/status/created_at_datetime" tal:content="tweet/status/created_at"></time></a>
    </blockquote>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        Footer
        <span class="portletBottomRight"></span>
    </dd>

</dl>
