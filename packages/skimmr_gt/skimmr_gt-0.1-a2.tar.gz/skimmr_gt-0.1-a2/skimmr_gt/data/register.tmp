  <center>
    <!-- EMPTY IF NOT USED BEFORE, NON-EMPTY IF REPEATING INCORRECT PASSWORD
    CHANGE
    -->
    %s
    <br/>
    <!-- PASSWORD CHANGE / USER REGISTRATION FORM -->
    <form method="POST" action="%s">
      <h4>Login details</h4>
      <table>
        <tr>
          <td>User name:</td><td><input type="text" name="usrn"/></td>
        </tr>
        <tr>
          <td>Old password:</td><td><input type="password" 
          name="old_passwd"></td>
        </tr>
        <tr>
          <td>New password:</td><td><input type="password" 
          name="new_passwd"></td>
        </tr>
      </table>
      <br/>
      <h4>Personal information</h4>
      <small>
      <table>
        <tr>
          <td>Occupation:</td>
          <td>
            <select name="occupation">
              <option value="none">None</option>
              <option value="student">student</option>
              <option value="scientist">scientist</option>
              <option value="teacher">teacher</option>
              <option value="industry">industry</option>
            </select>
            Other: <input type="text" name="occupation"/>
          </td>
        </tr>
        <tr>
          <td>Education:</td>
          <td>
            <select name="education">
              <option value="none">None</option>
              <option value="bachelor">bachelor equivalent</option>
              <option value="master">master equivalent</option>
              <option value="phd">Ph.D. equivalent</option>
            </select>
            Other: <input type="text" name="education"/>
          </td>
        </tr>
        <tr>
          <td>Field:</td>
          <td>
            <select name="field">
              <option value="none">None</option>
              <option value="medicine">medicine</option>
              <option value="pharma">pharma</option>
	      <option value="neuroscience">neuroscience</option>
              <option value="biology">biology</option>
              <option value="computer science">computer science</option>
            </select>
            Other: <input type="text" name="field"/>
          </td>
        </tr>
        <tr>
          <td>Additional info:</td>
          <td>
            <textarea 
            style="font-family:'Open Sans Condensed',sans-serif;color:#8A8985"
            rows="3" cols="40" name="additional"></textarea>
          </td>
        </tr>
      </table>
      </small>
      <br/>
      <input type="submit" value="Submit"/>
      <br/>
      <br/>
      <small>
        Note: if you are registering as a new user, leave the `old password'
        field blank and just pick a user name and new password. The personal
        information is optional, and filling it in has an effect only when 
        registering as a new user.
      </small>
      <input type="hidden" name="action" value="register"/>
    </form>
  </center>
