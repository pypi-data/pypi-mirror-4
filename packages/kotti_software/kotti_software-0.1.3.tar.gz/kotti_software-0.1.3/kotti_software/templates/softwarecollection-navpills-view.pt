<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" class="collection-view content">
    <p class="description">
      ${context.description}
    </p>
    <div tal:content="structure context.body">
      Marked <b>up</b> content goes here.
    </div>
    <div tal:condition="parent" id="local-navigation">
      <ul class="nav nav-pills">
        <tal:repeat tal:define="nodes children"
                    tal:repeat="item nodes">
          <li tal:define="active item == context and 'active' or ''"
              class="${active}">
            <a href="${api.url(item)}"
               title="${getattr(item, 'title', None)}">
              ${item.title}
            </a>
          </li>
        </tal:repeat>
      </ul>
    </div>
  </article>

</html>
