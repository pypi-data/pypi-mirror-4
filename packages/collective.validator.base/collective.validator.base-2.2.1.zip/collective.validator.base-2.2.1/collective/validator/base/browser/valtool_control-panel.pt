<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xml:lang="en" lang="en"
      tal:omit-tag=""
      metal:define-macro="controlpanel"
      i18n:domain="collective.validator.base">

<metal:block use-macro="context/prefs_main_template/macros/master">

<metal:block metal:fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border', 1)" />

<body>

<div metal:fill-slot="prefs_configlet_main">

	<h1 class="documentFirstHeading"
                i18n:translate="control_panel_title"
                metal:define-slot="heading">
                ValidationTool Menu
        </h1>

	<a href=""
               class="link-parent"
               tal:attributes="href string: $portal_url/plone_control_panel"
               i18n:translate="up_to_plone_setup">
                Up to Site Setup
       </a>

	<div style="text-align: left; clear:both; padding-top: 10px;"
	     tal:define="item_url here/getURL|here/absolute_url;
		     	  url_contents python: item_url+'/folder_report';
			  url_config python: here.aq_parent.absolute_url() + '/@@validationtool-controlpanel'">
        <fieldset id="fieldset-folder">
            <legend id="fieldsetlegend-global"><img src="config1.jpg" alt="Config Page" title="Config"
                    i18n:attributes="alt config_icon; title config_icon_title"></legend>
            <p><a i18n:translate="config_icon_title" tal:attributes="href url_config">Configure</a></p>
            <span i18n:translate="config">Global configuration of the tool.</span>
        </fieldset>
        <fieldset id="fieldset-folder">
            <legend id="fieldsetlegend-global"><img src="folder1.jpg" alt="Report Page" title="Report Folder" 
                 i18n:attributes="alt report_icon; title report_icon_title"></legend>
            <p><a i18n:translate="report_icon" tal:attributes="href url_contents">Report Page</a></p>
            <span i18n:translate="rep_page">See all the validation reports.</span>
        </fieldset>
	</div>
</div>

</body>

</metal:block>
</html>
