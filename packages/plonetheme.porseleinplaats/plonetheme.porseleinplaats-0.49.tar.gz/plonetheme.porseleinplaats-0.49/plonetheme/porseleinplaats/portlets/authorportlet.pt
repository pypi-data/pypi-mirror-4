<dl class="portlet portlet-author"
    i18n:domain="plone">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
	    Collectie van:
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem"
	    tal:define="creator python:context.portal_membership.getMemberById(context.Creator());
			    fullname python:creator.getProperty('fullname', context.Creator());
			    fullname python:context.Creator() == 'admin' and 'Instituut Collectie Nederland' or fullname; 
			    searchFolder string:${context/portal_url}/porselein-zoeken?portal_type%3Alist=Object&Creator=${creator}&Title=Collectie van ${fullname};
	    ">
	<div class="userFullName" tal:content="fullname">User  Name</div>
	<a href="" tal:attributes="href searchFolder">Bekijk alle porselein</a>
	<div class="visualClear"></div>
    </dd>
</dl>





