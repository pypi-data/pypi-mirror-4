ROCK_NAME=${ROCK_NAME-app}

cat << EOF > .rock.yml
runtime: ${ROCK_RUNTIME-python27}

run: python ${ROCK_NAME}.py
EOF

cat << EOF > requirements.txt
Flask
EOF

rock build

rock run pip freeze > requirements.txt

cat << EOF > "${ROCK_NAME}.py"
from flask import Flask

app = Flask(__name__)

@app.route('/')
def hello():
    return 'Hello World'

if __name__ == '__main__':
    app.run()
EOF

mkdir -p tests
