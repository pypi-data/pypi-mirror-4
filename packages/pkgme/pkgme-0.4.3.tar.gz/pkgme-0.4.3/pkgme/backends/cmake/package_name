# Return PROJECT() value from CMakeLists.txt

import re

project = None

with open("CMakeLists.txt", "r") as cmakelists:
    for line in cmakelists:
        match = re.search(r"project\(\s(.*)\s\)", line, re.IGNORECASE)
	if match:
            project = match.group(1)
            break

if project:
     print project
