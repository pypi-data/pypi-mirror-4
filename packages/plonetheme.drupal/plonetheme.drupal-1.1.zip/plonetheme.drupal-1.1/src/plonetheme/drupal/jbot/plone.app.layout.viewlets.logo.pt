<div metal:define-macro="portal_logo">
	
<a id="portal-logo"
   title="Home"
   accesskey="1"
   tal:attributes="href view/navigation_root_url;
                   title view/navigation_root_title"
   i18n:domain="plone"
   i18n:attributes="title">
    <img src="logo.jpg" alt=""
         tal:replace="structure view/logo_tag" /></a>

<a id="portal-title"
   title="Home"
   tal:attributes="href view/navigation_root_url;
                   title view/navigation_root_title"
   i18n:domain="plone"
   i18n:attributes="title">
    <span tal:content="view/navigation_root_title" /></a>
         
</div>