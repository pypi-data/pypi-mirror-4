%:
	dh $@ --with python2 --buildsystem=python_distutils

override_dh_auto_build:
	sed -e 's/Pillow/PIL/' -i setup.py
	rm -f baruwa/public/js/baruwa/.gitignore
	dh_auto_build
#override_dh_python2:
#	dh_python2 --no-guessing-deps
override_dh_install:
	cd debian/baruwa/
	dh_install
	dh_install extras/perl/baruwa-backup2db.pl /usr/bin
	dh_install extras/perl/BS.pm /usr/share/baruwa/CustomFunctions
	dh_install extras/perl/exim-bcrypt.pl /usr/share/baruwa
