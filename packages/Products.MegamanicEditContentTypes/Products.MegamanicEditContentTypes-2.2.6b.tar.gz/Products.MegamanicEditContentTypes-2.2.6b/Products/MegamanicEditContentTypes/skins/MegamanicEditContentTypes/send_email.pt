<tal:block metal:define-macro="master">
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

  <body>

    <metal:fill fill-slot="main">
    <metal:main define-macro="main">

    <p tal:condition="not:context/mail_enabled">The python email
      module > version 4 is not available, mail disabled.  Please
      contact the system administrator for help.</p>

    <form action="./send_email_submit" tal:condition="context/mail_enabled">

    <input type="checkbox" name="save_copy" value="true" /> Save a
    copy of the message.<br /><br />

    <input type="submit" value=" Send email " />

    </form>

    </metal:main>
    </metal:fill>

  </body>

</html>

</tal:block>
