  <center>
    <!-- EMPTY IF INIT SCREEN, NON-EMPTY IF REPEATING INCORRECT LOGIN -->
    %s
    <br/>
    <!-- INPUT FORM -->
    <form method="POST" action="%s">
      <table>
        <tr>
          <td>User name:</td><td><input type="text" name="usrn"/></td>
        </tr>
        <tr>
          <td>Password:</td><td><input type="password" name="passwd"></td>
        </tr>
      </table>
      <br/>
      <input type="submit" value="Login"/>
      <br/>
      <br/>
      <small>
        Register as a new user or change your password 
        <a href="/data/html/register.tmp">here</a>.
      </small>
      <input type="hidden" name="action" value="login"/>
    </form>
  </center>
