<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="plonetheme.arnolfini">

  <!-- 'Arnolfini Theme' Zope 3 browser layer
    Register views, viewlets and resources for this layer to make sure
    they only apply to the 'Arnolfini Theme' theme.
    You can also use this layer to override default Plone browser views
    and viewlets only within the 'Arnolfini Theme' theme.
  -->
  <interface
      interface=".interfaces.IThemeSpecific"
      type="zope.publisher.interfaces.browser.IBrowserSkinType"
      name="Arnolfini Theme"
      />
  
  <!-- Viewlets registration -->
  <browser:viewlet
        name="plone.logo"
        manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
        class="plone.app.layout.viewlets.common.LogoViewlet"
        template="logo.pt"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
    />
  
  <browser:viewlet
        name="plone.searchbox"
        manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
        class="plone.app.layout.viewlets.common.SearchBoxViewlet"
        template="searchbox.pt"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
    />
  
  <browser:viewlet
        name="plone.global_sections"
        manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
        class="plone.app.layout.viewlets.common.GlobalSectionsViewlet"
        template="sections.pt"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
    />
  
    <browser:viewlet
        name="plone.footer"
        manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
        class=".views.Footer"
        template="footer_custom.pt"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
    />

  <!-- Zope 3 browser resources -->
  <browser:resourceDirectory
      name="plonetheme.arnolfini.images"
      directory="images"
      layer=".interfaces.IThemeSpecific"
      />

  <browser:resourceDirectory
      name="plonetheme.arnolfini.stylesheets"
      directory="stylesheets"
      layer=".interfaces.IThemeSpecific"
      />
  
  <browser:resourceDirectory
      name="plonetheme.arnolfini.fonts"
      directory="fonts"
      layer=".interfaces.IThemeSpecific"
      />
  
  <browser:resourceDirectory
      name="plonetheme.arnolfini.javascripts"
      directory="javascripts"
      layer=".interfaces.IThemeSpecific"
      />
  
    <!--  Browser view declaration -->
    <browser:page
	    name="document_view"
	    for="*"
	    class=".views.DocumentView"
	    template="document_view_custom.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <browser:page
	    name="folder_listing"
	    for="*"
	    class=".views.FolderListing"
	    template="folder_listing_custom.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <browser:page
	    name="events_listing"
	    for="*"
	    class=".views.EventListingView"
	    template="event_listing.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <browser:page
	    name="blog_view"
	    for="*"
	    class=".views.BlogView"
	    template="blog_view.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <browser:page
	    name="search_listing"
	    for="*"
	    class=".views.FolderListing"
	    template="search_listing.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <browser:menuItem
        for="*"
        menu="plone_displayviews"
        title="Search Listing"
        action="@@search_listing"
        layer=".interfaces.IThemeSpecific"
        description="View for years in archive mode."
    />
    
    <browser:page
	    name="people_listing"
	    for="*"
	    class=".views.FolderListing"
	    template="people_listing.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <browser:menuItem
        for="*"
        menu="plone_displayviews"
        title="People view"
        action="@@people_listing"
        layer=".interfaces.IThemeSpecific"
        description="View in archive mode."
    />
    
    <browser:page
	    name="event_view"
	    for="Products.mediaEvent.interfaces.mediaevent.IMediaEvent"
	    class=".views.EventView"
	    template="event_view.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <!-- browser:page
	    name="archive"
	    for="Products.mediaEvent.interfaces.mediaevent.IMediaEvent"
	    class=".views.EventArchiveView"
	    template="event_view_archive.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    / -->
    
    <browser:page
	    name="archive"
	    for="plone.app.collection.interfaces.ICollection"
	    class=".views.EventArchiveListingView"
	    template="event_view_archive_listing.pt"
	    layer=".interfaces.IThemeSpecific"
	    permission="zope2.View"
    />
    
    <browser:menuItem
        for="plone.app.collection.interfaces.ICollection"
        menu="plone_displayviews"
        title="Archive view"
        action="@@archive"
        layer=".interfaces.IThemeSpecific"
        description="View in archive mode."
    />
  
  <browser:page
        name="search"
        class=".views.SearchView"
        permission="zope2.View"
        for="Products.CMFPlone.interfaces.IPloneSiteRoot"
        layer=".interfaces.IThemeSpecific"
        template="searchview.pt"
        />
  
    <browser:page
        name="updated_search"
        class=".views.SearchView"
        permission="zope2.View"
        for="Products.CMFPlone.interfaces.IPloneSiteRoot"
        layer=".interfaces.IThemeSpecific"
        template="updated_search.pt"
        />
    
</configure>
