<div metal:define-macro="listing">

    <div i18n:domain="newspage" tal:define="fake_context python:request.get('newspage', context)">
        <h1 class="documentFirstHeading" i18n:translate="news">News</h1>
        <div tal:repeat="item python:fake_context.primary_news()" class="headlines">
                <a href="" tal:attributes="href python:item.absolute_url()"
                           tal:condition="python:item.getImage()" class="headline-image">
                        <img src="" alt="" tal:replace="structure python:item.tag(scale='mini')" />
	<!--                    <img src="" alt="" tal:attributes="src python:str(item.getImage().absolute_url()) + '_thumb';
                                                       alt python:item.getImageCaption()" />
	-->
                </a>
                <h4 class="headline-title" tal:content="item/Title">Title</h4>
                <p class="headline-desc" tal:content="item/Description">Description</p>
                <a href="" tal:attributes="href python:item.absolute_url()" class="headline-more">
                    <span class="newspageLink" i18n:translate="read_more_about">Read more about </span>
                    <span tal:content="item/Title"></span>...
                </a>
        </div>

    <div class="additionalNews">
        <metal:block tal:repeat="result python:fake_context.secondary_news()[:2]">
                <h4 class="headline-title" tal:content="result/Title">Title</h4>
                <p class="headline-desc" tal:content="result/Description">Description</p>
                    <a href="#" tal:attributes="href result/absolute_url"><span class="newspageLink" i18n:translate="read_more_about">Read more about </span>
                    <span tal:content="result/Title"></span></a>...
        </metal:block>            
    </div>

    <br />
    <a class="moreNews" tal:attributes="href request/newspage/absolute_url">Flere nyhetssaker</a>

    </div>

</div>
