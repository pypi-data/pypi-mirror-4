<?xml version="1.0"?>
<object name="portal_skins" meta_type="Plone Skins Tool">
 <object name="validationtool_images" meta_type="Filesystem Directory View"
    directory="collective.validator.base:skins/validationtool_images"/>
 <object name="validationtool_templates" meta_type="Filesystem Directory View"
    directory="collective.validator.base:skins/validationtool_templates"/>

 <skin-path name="*">
     <layer name="validationtool_images" insert-after="custom"/>
     <layer name="validationtool_templates" insert-after="validationtool_images"/>
 </skin-path>

</object>
